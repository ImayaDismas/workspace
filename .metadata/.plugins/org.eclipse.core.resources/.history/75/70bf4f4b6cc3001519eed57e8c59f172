package thirdgreatest;

import java.util.Arrays;

// Using the Java language, have the function ThirdGreatest(strArr)
// take the array of strings stored in strArr and return the third largest word within in.
// So for example: if strArr is ["hello", "world", "before", "all"]
// your output should be world because "before" is 6 letters long, and "hello" and "world" are both 5, 
//but the output should be world because it appeared as the last 5 letter word in the array. If strArr 
//was ["hello", "world", "after", "all"] the output should be after because the first 
//three words are all 5 letters long, so return the last one. 
//The array will have at least three strings and each string will only contain letters.

// use the main method only for calling the function where your logic lies. :-)
public class third_largest{
	public static void ThirdGreatest(String[] strArr){
		int[] size =new int[strArr.length];
			for(int i=0; i<strArr.length; i++){
				size[i]=strArr[i].length();
			}
			Arrays.sort(size);
			int count=0;
			for(int i=0; i<strArr.length; i++){
				System.out.println(size[i]);
				if(size[i] == size[i+1])
				{
					System.out.println(size[i]);
					count++;
				}
				
			}
			System.out.println(count);
			for(int i=0; i<strArr.length; i++){
				if(strArr[i].length() == size[strArr.length - 2]){
					if(strArr[i].length()== strArr[i+1].length())
					{
						if(strArr[i+1].length()== strArr[i+2].length())
						{
							System.out.println(strArr[i+2]);
							count++;
						}
						else{
							System.out.println(strArr[i+1]);
						}
					}
					else{
						System.out.println(strArr[i]);
					}
				}
			}
		}
	public static void main(String[] args){
		String[] Array = {"hello", "world", "kdssa", "before", "all"};
		ThirdGreatest(Array);
	}
}
